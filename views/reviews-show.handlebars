<!-- views/reviews-show.handlebars -->
<a href="/">Back to Home</a>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>{{review.title}}</h1>
    <h2>{{review.movieTitle}}</h2>
    <p>{{review.description}}</p>
    <p><a href="/movies/{{review.movieId}}/reviews/{{review._id}}/edit">Edit</a></p>
    <p>
      <form method="POST" action="/movies/{{review.movieId}}/reviews/{{review.id}}?_method=DELETE" >
        <button type="submit">Delete</button>
      </form>
    </p>

    <hr>

    {{> comment-form}}

    <hr>

    <div id="comments">
      {{#each comments}}
      {{> comment}}
      {{/each}}
    </div>
  </div>
</div>